{% block modules %}
<div class="info-parent">

    <div class="user">
        <div class="info">
            <ul class="info__info">
                <li>
                    Logged in as:
                    <span class="info--highlight">{{ user.name }}</span>

                </li>
                <li>
                    Permissions:
                    <span class="info--highlight">{{ user.rights }}</span>

                </li>

            </ul>
        </div>
    </div>
</div>
<div class="server-info">

</div>
<div class="info-parent">
    <div class="notes">
        <div class="info">
            <ul class="info__info">
                <li>
                    <span class="info--highlight">{{ notes.count.day }}</span> things to do today
                </li>
                <li>
                    <span class="info--highlight-s">{{ notes.count.week }}</span> things to do this week
                </li>
                <li>
                    <span class="info--highlight">{{ notes.count.month }}</span> things to do this month
                </li>
                <li>
                    <span class="info--highlight-s">{{ notes.mentions }}</span> mentions
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock modules %}
